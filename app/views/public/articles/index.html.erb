<div class="card-list-containar py-5">
  
  <% @articles.each do |article| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to article_path(article.id) do %>
      <%= image_tag article.favorite, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag article.user.image, size: '50x50', class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to article_path(article.id) do %>
              <strong><i class="far fa-flag"></i><span><%= article.title %></span></strong>
            <% end %>
          </p>
          <span>
            <%= link_to user_path(article.user.id), class: "text-dark" do %>
             <i class="fas fa-user"></i> <%= article.user.account %>
             <% end %>
          </span>
          <span> ｜ <i class="far fa-comment"></i> <%= "#{article.comments.count} コメント" %> ｜ </span>
          <span><i class="far fa-heart" style="color: #ff0000;"></i> <%= "#{article.likes.count} 尊い" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!--%= paginate post_images %>-->
</div>
