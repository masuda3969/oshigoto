<div class  = "container">
  <div class = "row">
    <h4><%= @user.account %>さんの推しごとページ</h4>
    <%= image_tag @user.image %>

    <%= link_to "♥　尊いリスト", likes_path %>

    <%= link_to "フォロー一覧",user_followings_path(@user.id) %>
    <%= link_to "フォロワー一覧", user_followers_path(@user.id) %>

    <!--フォロー機能（自分のページには表示されない）-->
    <% unless @user == current_user %>
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
      <% end %>
    <% end %>
  </div>

  <div class = "row">
    <%= link_to "布教する", new_article_path %>
    <% @articles.each do |article| %>
     <%= link_to article_path(article.id) do %>
       <%= article.title %>
     <% end %>
    <% end %>
  </div>
  <div class = "row">
    <%= render 'public/schedules/schedule', schedules: @schedules %>
  </div>
  <div class = "row">
    <% if @user.id == current_user.id %>
     <%= link_to "編集する", edit_user_registration_path(@user.id) %>
    <% end %>
  </div>
</div>
