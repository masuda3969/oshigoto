<div class = "container font-pupupu">
  <div class = "row justify-content-start my-4">
    <% if users.exists? %>
    <ul class = "list-group">
      <% users.each do |user| %>
      <li class = "list-group-item">
        <%= image_tag user.image, size: "100x100", class: "rounded-circle" %>
        <%= link_to user_path(user.id) do %>
          <%= user.account %>
        <% end %>
      </li>
      <% end %>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>  
    </ul>
  
  </div>
  <div class = "row">
    <%= link_to '<<モドル', :back %>
  </div>
</div>