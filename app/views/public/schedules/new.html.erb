<div class = "container">
  <div class = "row">
    
    <%= form_with model: @schedule, url: '/schedules', method: :post do |f| %>
    
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
    
    <%= f.label :スケジュール %>
    <%= f.text_area :body %>
    
    <%= f.label :日時 %>
    <%= f.datetime_select :start_time %>
    
    <%= f.submit "登録"  %>
    
    <% end %>
  </div>
</div>