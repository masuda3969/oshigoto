<div class = "container">
  <div class = "row">
    <h6>会員一覧</h6>
    <table class = "table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>会員氏名</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
             <%= user.last_name %><%= user.first_name %>
            <% end %>
          </td>
          <td>
            <% if user.is_deleted == false %>
              <div class = "text-success font-weight-bold">
                <%= "有効" %>
              </div>
            <% else %>
              <div class = "text-secondary font-weight-bold">
                <%= "退会" %>
              </div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
