<div class = "container">
  <div class = "row">
    <h4><%= @user.last_name %><%= @user.first_name %>さんの会員情報編集</h4>
  </div>
  <div class = "row">
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>

    <%= f.label :フリガナ %>
    <%= f.label :セイ %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :メイ %>
    <%= f.text_field :first_name_kana %>

    <%= f.label :名前 %>
    <%= f.label :姓 %>
    <%= f.text_field :last_name %>
    <%= f.label :名 %>
    <%= f.text_field :first_name %>

    <%= f.label :アカウント名 %>
    <%= f.text_field :account %>

    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>

    <%= f.label :会員ステータス %>
    <%= f.radio_button :is_deleted, false %>
    <%= f.label :is_deleted_false, "有効" %>

    <%= f.radio_button :is_deleted, true %>
    <%= f.label :is_deleted_true, "退会" %>

    <%= f.submit'更新する' %>

    <% end %>

  </div>
</div>