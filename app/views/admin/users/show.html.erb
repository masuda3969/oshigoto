<div class = "container">
  <div class = "row">
    <h4><%= @user.last_name %><%= @user.first_name %>さんの会員情報</h4>
  </div>
  
  <div class = "row">
    <table class = "table">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>会員氏名</th>
          <td>
            <%= link_to edit_admin_user_path(@user.id) do %>
             <%= @user.last_name %><%= @user.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>アカウント名</th>
          <td><%= @user.account %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= @user.is_deleted %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
