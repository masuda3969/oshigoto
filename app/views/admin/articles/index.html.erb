<div class = "container">
  <div class = "row">
    
    <div class = "card-deck">
      <div class = "card">
        <div class = "col-3">
          <% @articles.each do |article| %>
          <div class= "card-body">
            
            <div class = "card-title">
              <%= link_to admin_article_path(article.id) do %>
                <%= article.title %>
              <% end %>
            </div>
            
            <div class = "card-text">
              <%= article.body %>
            </div>
          </div>
          <% end %>    
        </div>
        
      </div>
    </div>
  </div>
</div>